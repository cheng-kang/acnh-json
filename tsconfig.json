{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "incremental": true,
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "types": [
      "node"
    ],
    "outDir": "build"
  },
  "exclude": [
    "out",
  ]
}
